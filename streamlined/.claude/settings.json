{
  "setupId": "streamlined",
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "mcp__crawl4ai",
      "mcp__perplexity",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(pytest:*)",
      "Bash(mypy:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(poetry:*)",
      "Bash(uv:*)",
      "Bash(pdflatex:*)",
      "Bash(bibtex:*)",
      "Bash(pandoc:*)",
      "Bash(pdftotext:*)",
      "Bash(pdftk:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(kill:*)",
      "Bash(chmod:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '>>> '; basename \"$PWD\"; if git rev-parse --git-dir > /dev/null 2>&1; then printf ' git:('; git branch --show-current 2>/dev/null || printf 'detached'; printf ')'; [ -n \"$(git status --porcelain 2>/dev/null)\" ] && printf ' *'; fi"
  },
  "mcpServers": {
    "crawl4ai": {
      "type": "sse",
      "url": "${CRAWL4AI_URL}",
      "headers": {
        "Authorization": "Bearer ${CRAWL4AI_TOKEN}"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}
